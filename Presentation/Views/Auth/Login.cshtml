@model MemberLoginForm
@{
    Layout = "_Layout_CenterScreen";
    ViewData["Title"] = "Login";
}

<section id="login">
    <form asp-controller="Auth" asp-action="Login" method="post" novalidate enctype="multipart/form-data">
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        <h1>@ViewData["Title"]</h1>

        <div class="form-group">
            <button class="btn btn-google" type="submit">
                <img src="~/images/google-icon.svg" alt="Google Logo" />
                Login with Google
            </button>
        </div>

        <div class="or-separator">
            <span>OR</span>
        </div>


        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" />

        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" />
        </div>
        <div class="form-group remember-forgot">
            <div class="remember-me">
                <input type="checkbox" id="RememberMe" name="RememberMe" />
                <label for="RememberMe">Remember Me</label>
            </div>
            <a href="/Auth/ForgotPassword" class="forgot-password">Forgot Password?</a>
        </div>
        @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
        {
            <div class="alert-notification error">@ViewBag?.ErrorMessage</div>
        }

        <div class="form-group">
            <button class="btn btn-submit" type="submit">Log In</button>
        </div>
        <div class="signup-prompt">
            Don't have an account? <a asp-controller="Auth" asp-action="SignUp">Sign Up</a>
        </div>


    </form>

</section>