@model ForgotPasswordForm
@{
    Layout = "_Layout_CenterScreen";
    ViewData["Title"] = "Forgot Password";
}

<section id="login">
    <form asp-controller="Auth" asp-action="ForgotPassword" method="post" novalidate>
        <h1>@ViewData["Title"]</h1>

        <p class="form-description">
            Enter your email address and we'll send you instructions to reset your password.
        </p>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" placeholder="Enter your email" />
        </div>

        @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
        {
            <div class="alert-notification error">@ViewBag?.ErrorMessage</div>
        }

        @if (!string.IsNullOrEmpty(ViewBag?.SuccessMessage))
        {
            <div class="alert-notification success">@ViewBag?.SuccessMessage</div>
        }

        <div class="form-group">
            <button class="btn btn-submit" type="submit">Reset Password</button>
        </div>

        <div class="form-footer">
            <a asp-controller="Auth" asp-action="Login" class="back-to-login">Back to Login</a>
        </div>
    </form>
</section>

<style>
    .form-description {
        text-align: center;
        margin-bottom: 2rem;
        color: var(--text-muted-color);
    }

    .alert-notification.success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .form-footer {
        text-align: center;
        margin-top: 1.5rem;
    }

    .back-to-login {
        color: var(--blue);
        text-decoration: none;
    }

    .back-to-login:hover {
        text-decoration: underline;
    }

    /* Dark mode support */
    [data-theme="dark"] .form-description {
        color: var(--text-muted-color, #b0b3b8);
    }

    [data-theme="dark"] .alert-notification.success {
        background-color: rgba(21, 87, 36, 0.2);
        color: #4caf50;
        border-color: rgba(21, 87, 36, 0.3);
    }

    [data-theme="dark"] .back-to-login {
        color: var(--blue-semilight);
    }
</style>