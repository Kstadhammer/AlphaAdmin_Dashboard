@model MemberSignUpForm
@{
    Layout = "_Layout_CenterScreen";
    ViewData["Title"] = "Create Account";
}

<section id="signup">
    <form asp-controller="Auth" asp-action="SignUp" method="post" novalidate enctype="multipart/form-data">
        <h1>@ViewData["Title"]</h1>

        @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
        {
            <div class="alert-notification error">@ViewBag?.ErrorMessage</div>
        }

        <div class="form-group">
            <button class="btn btn-google" type="submit">
                <img src="~/images/google-icon.svg" alt="Google Logo" />
                Sign Up with Google
            </button>
        </div>

        <div class="or-separator">
            <span>OR</span>
        </div>


        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group remember-forgot">
            <div class="remember-me">
                <input type="checkbox" id="TermsAndConditionsAccepted" name="TermsAndConditionsAccepted" />
                <label for="TermsAndConditionsAccepted">I accept the <span class="terms-and-conditions">Terms and
                        Conditions</span></label>
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-submit" type="submit">Create Account</button>
        </div>

        <div class="signup-prompt">
            Already have an account? <a asp-controller="Auth" asp-action="Login">Login</a>
        </div>


    </form>

</section>