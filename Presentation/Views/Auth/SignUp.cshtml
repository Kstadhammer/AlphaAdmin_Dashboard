@model MemberSignUpForm
@{
    Layout = "_Layout_CenterScreen";
    ViewData["Title"] = "Create Account";
}

<section id="signup">
    <form asp-controller="Auth" asp-action="SignUp" method="post" novalidate enctype="multipart/form-data">
        <h1>@ViewData["Title"]</h1>

        @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))

        {
            <div class="alert-notification error">@ViewBag.ErrorMessage!</div>

        }

        @await Html.PartialAsync("~/Views/Shared/Partials/Sections/_ExternalAuthenticationPartial.cshtml")

        <div class="or-separator">
            <span>OR</span>
        </div>

        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" placeholder="Enter your first name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" placeholder="Enter your last name" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <input asp-for="ConfirmPassword" placeholder="Confirm your password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group remember-forgot">
            <div class="remember-me">
                <input type="checkbox" id="TermsAndConditionsAccepted" name="TermsAndConditionsAccepted" />
                <label for="TermsAndConditionsAccepted">I accept the <span class="terms-and-conditions">Terms and
                        Conditions</span></label>
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-submit" type="submit">Create Account</button>
        </div>

        <div class="signup-prompt">
            Already have an account? <a asp-controller="Auth" asp-action="Login">Login</a>
        </div>


    </form>

</section>