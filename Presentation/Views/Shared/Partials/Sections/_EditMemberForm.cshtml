@model Business.Models.EditMemberForm

<div id="editMemberModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Edit Member</h3>
            <button class="btn-close" data-close="true"></button>
        </div>
        <form novalidate method="post" asp-action="EditMember" asp-controller="Members" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" id="editMemberId" />
            <input type="hidden" asp-for="ImageUrl" id="editMemberImageUrl" />

            <!-- Profile Picture Upload Section -->
            <div class="profile-upload-container">
                <div class="profile-upload">
                    <img id="currentAvatar" src="/images/Avatar_male_1.svg" alt="Current Avatar"
                        class="current-avatar" />
                    <input asp-for="MemberImage" type="file" id="memberImage" class="profile-input" />
                    <label for="MemberImage" class="profile-label">
                        <div class="camera-icon">
                            <i class="fa-regular fa-camera"></i>
                        </div>
                    </label>
                </div>
            </div>

            <!-- Avatar Selection Gallery -->
            <div class="avatar-gallery">
                <h4>Select Avatar</h4>
                <div class="avatar-options">
                    <div class="avatar-option" data-avatar="/images/Avatar_male_1.svg">
                        <img src="/images/Avatar_male_1.svg" alt="Default Avatar" />
                    </div>
                    <div class="avatar-option" data-avatar="/images/avatars/avatars1.png">
                        <img src="/images/avatars/avatars1.png" alt="Avatar 1" />
                    </div>
                    <div class="avatar-option" data-avatar="/images/avatars/avatars2.png">
                        <img src="/images/avatars/avatars2.png" alt="Avatar 2" />
                    </div>
                    <div class="avatar-option" data-avatar="/images/avatars/avatars3.png">
                        <img src="/images/avatars/avatars3.png" alt="Avatar 3" />
                    </div>
                    <div class="avatar-option" data-avatar="/images/avatars/avatars4.png">
                        <img src="/images/avatars/avatars4.png" alt="Avatar 4" />
                    </div>
                    <div class="avatar-option" data-avatar="/images/avatars/avatars5.png">
                        <img src="/images/avatars/avatars5.png" alt="Avatar 5" />
                    </div>
                </div>
                <p class="avatar-help-text">Click an avatar to select, or upload your own image above</p>
            </div>

            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <div class="field-group">
                    <input asp-for="FirstName" type="text" class="form-control" placeholder="Enter first name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <div class="field-group">
                    <input asp-for="LastName" type="text" class="form-control" placeholder="Enter last name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <div class="field-group">
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="JobTitle">Job Title</label>
                <div class="field-group">
                    <input asp-for="JobTitle" type="text" class="form-control" placeholder="Enter job title" />
                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Phone">Phone</label>
                <div class="field-group">
                    <input asp-for="Phone" type="tel" class="form-control" placeholder="Enter phone number" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="checkbox-container">
                    <input asp-for="IsActive" type="checkbox" id="isActive" />
                    <label for="isActive">Active</label>
                </div>
            </div>

            <div class="button-group">
                <button type="button" class="btn btn-cancel" data-close="true">Cancel</button>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>
